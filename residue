/* Styling the Toggle Button */
button.btn-primary {
    background-color: transparent; /* Purple background to match the theme */
    border: none; /* Border to blend with the gradient background */
    color: rgb(38, 31, 31); /* Text color to match your design */
    font-family: "Gloria Hallelujah", cursive; /* Matching font */
    font-size: 1.2rem; /* Adjust font size */
    padding: 0.5rem 1rem; /* Adjust padding */
    border-radius: 12px; /* Rounded corners */
    transition:background-color 1s, border 1s;
}

button.btn-primary:hover {
    background-color: #271f1f; /* Darker shade on hover */
    
}

button.btn-primary:active {
    background-color: #383523; /* Even darker on active */
    opacity: 0.9;
}

/* Styling the Collapse Content */
.collapse .card.card-body {
    background-color: #151310 !important; /* Dark background to fit with the theme */
    color: #e1c7c7 !important; /* Light text color for readability */
    font-family: "Gloria Hallelujah", cursive; /* Matching font */
    border:none; /* Matching border */
    border-radius: 12px !important; /* Rounded corners */
    padding: 1rem; /* Adjust padding */
    transition: background-color 1s, color 1s;
}

/* Optional: Add shadow for a slight pop effect */
.collapse .card.card-body {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

